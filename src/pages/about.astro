---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header";
import Footer from "../components/Footer";

const personJsonLd = {
  "@context": "https://schema.org",
  "@type": "Person",
  name: "Lilian",
  url: "https://hogwai.github.io",
  jobTitle: "Software Developer",
  sameAs: [
    "https://github.com/Hogwai",
    "https://www.linkedin.com/in/lilian-wernert/",
  ],
};
---

<BaseLayout title="About" description="About Lilian â€” developer with a passion for the Java ecosystem and the author of Hogwai Tech Blog.">
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(personJsonLd)} />
  </Fragment>
  <Header client:visible />

  <main id="main-content" class="flex-grow bg-page">
    <div class="container-custom py-12">
      <h1
        class="text-4xl md:text-5xl font-bold mb-8 text-ink"
      >
        About
      </h1>

      <div class="prose prose prose-sm max-w-none">
        <p class="text-xl text-ink mb-6">
          Welcome to my technical blog
        </p>

        <h2
          class="text-2xl font-bold mt-8 mb-4 text-ink"
        >
          Who am I ?
        </h2>
        <p class="text-ink">
          I'm Lilian, a seasoned developer with a passion for the java
          ecosystem.
        </p>
        <h2
          class="text-2xl font-bold mt-8 mb-4 text-ink"
        >
          The stack
        </h2>
        <p class="text-ink">
          The blog is made with <a href="https://github.com/withastro/astro" target="_blank">Astro</a>, <a href="https://github.com/facebook/react" target="_blank">React</a>, <a href="https://github.com/microsoft/TypeScript" target="_blank">TypeScript</a>, and <a href="https://github.com/tailwindlabs/tailwindcss" target="_blank">Tailwind CSS</a>.
        </p>
      </div>
    </div>
  </main>

  <Footer />
</BaseLayout>
