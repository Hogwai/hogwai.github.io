---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header';
import Footer from '../components/Footer';
---

<BaseLayout title="404 — Page introuvable">
  <Header client:visible />

  <main class="flex-grow bg-gray-50 dark:bg-gray-950">
    <div class="container-custom py-24 text-center">
      <p class="text-8xl font-bold text-gray-200 dark:text-gray-800 mb-4">404</p>
      <p class="text-xl text-gray-500 dark:text-gray-400 mb-8">Page introuvable.</p>
      <a
        href="/"
        class="text-blue-600 dark:text-blue-400 hover:underline"
      >
        ← Accueil
      </a>
    </div>
  </main>

  <Footer />
</BaseLayout>
