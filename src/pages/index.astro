---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header';
import Footer from '../components/Footer';
import BlogCard from '../components/BlogCard';
import { getCollection } from 'astro:content';

const posts = (await getCollection('posts'))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<BaseLayout title="Accueil - Dev Blog">
  <Header client:load />
  
  <main class="flex-grow">
    <section class="bg-gradient-to-b from-blue-100 to-transparent dark:from-blue-900/20 dark:to-transparent py-20">
      <div class="container-custom text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6 text-gray-900 dark:text-white">
          Blog Technique
        </h1>
        <p class="text-xl text-gray-700 dark:text-gray-300 mb-8 max-w-2xl mx-auto">
          Articles sur Java, TypeScript et le d√©veloppement logiciel moderne
        </p>
        <a 
          href="/tech-blog/posts" 
          class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold px-8 py-3 rounded-lg transition"
        >
          Voir tous les articles
        </a>
      </div>
    </section>
    
    <section class="container-custom py-16">
      <h2 class="text-3xl font-bold mb-8 text-gray-900 dark:text-white">Derniers articles</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {posts.map((post) => (
          <BlogCard
            title={post.data.title}
            description={post.data.description}
            pubDate={post.data.pubDate}
            slug={post.slug}
            tags={post.data.tags}
            client:visible
          />
        ))}
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>